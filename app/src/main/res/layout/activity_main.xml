<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize">


    <Button
        android:id="@+id/serverCheck"
        android:layout_width="170dp"
        android:layout_height="71dp"
        android:onClick="pingTheServer"
        android:text="Ping the Server"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.271" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="33dp"
        android:layout_marginBottom="33dp"
        android:background="#000000"
        app:layout_constraintBottom_toTopOf="@+id/toUserPage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/serverCheck" />

    <Button
        android:id="@+id/toUserPage"
        android:layout_width="170dp"
        android:layout_height="71dp"
        android:layout_marginStart="135dp"
        android:layout_marginEnd="135dp"
        android:onClick="toLogInActivity"
        android:text="Move to User Page"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="31dp"
        android:layout_marginBottom="23dp"
        android:background="#000000"
        app:layout_constraintBottom_toTopOf="@+id/createUserButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toUserPage" />

    <Button
        android:id="@+id/createUserButton"
        android:layout_width="130dp"
        android:layout_height="71dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="261dp"
        android:layout_marginBottom="203dp"
        android:onClick="toCreateUser"
        android:text="Create User"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toUserPage"
        app:layout_constraintVertical_bias="0.222" />

    <Button
        android:id="@+id/createMenuItem"
        android:layout_width="130dp"
        android:layout_height="71dp"
        android:onClick="toCreateMenuItems"
        android:text="Create Menu Items"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.87"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toUserPage"
        app:layout_constraintVertical_bias="0.239" />


</androidx.constraintlayout.widget.ConstraintLayout>